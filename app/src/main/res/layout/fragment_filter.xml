<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.droid47.petfriend.base.widgets.Success" />

        <import type="com.droid47.petfriend.base.widgets.Failure" />

        <import type="com.droid47.petfriend.base.widgets.Empty" />

        <variable
            name="newFilterViewModel"
            type="com.droid47.petfriend.search.presentation.viewmodel.FilterViewModel" />

        <variable
            name="errorStateConfig"
            type="com.droid47.petfriend.base.bindingConfig.ErrorViewConfiguration" />

        <variable
            name="emptyStateConfig"
            type="com.droid47.petfriend.base.bindingConfig.EmptyScreenConfiguration" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdl_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevationOverlay="@{@dimen/plane_08}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csl_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/grid_0_5"
            android:layout_marginBottom="@dimen/grid_6">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/grid_6"
                android:layout_marginTop="@dimen/grid_5"
                android:backgroundTint="?attr/colorSecondary"
                android:onClick="@{() -> newFilterViewModel.resetFilter(newFilterViewModel.menuItemListLiveData)}"
                android:text="@string/reset"
                android:textAppearance="?attr/textAppearanceButton"
                android:textColor="?attr/colorOnSecondary"
                app:invisible="@{newFilterViewModel.allSelectedFilterListLiveData instanceof Success}"
                app:layout_constraintBottom_toTopOf="@id/navigation_menu_view"
                app:layout_constraintEnd_toStartOf="@id/crl_filter"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.pet.MediumComponent.LeftCorners" />

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_menu_view"
                style="@style/Widget.PetGoogle.NavigationView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/grid_12"
                app:itemBackground="@drawable/navigation_item_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/crl_filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_reset"
                app:menu="@menu/category_menu"
                app:paddingBottomSystemWindowInsets="@{true}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/crl_filter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_search"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/grid_4"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginTop="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="@dimen/grid_2"
                    app:cardElevation="@dimen/plane_08"
                    app:cardPreventCornerOverlap="true"
                    app:layout_constraintBottom_toTopOf="@id/rv_selected_filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/search_filters"
                        android:maxLines="1"
                        android:paddingStart="@dimen/grid_2"
                        android:paddingEnd="@dimen/grid_1"
                        android:text="@={newFilterViewModel.searchFilterLiveData}"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?attr/colorOnSurface" />

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_selected_filter"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:clipToPadding="false"
                    android:minHeight="@dimen/grid_3"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/grid_0_5"
                    android:paddingEnd="@dimen/grid_0_5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/fl_circular_reveal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_search"
                    app:visible="@{newFilterViewModel.allSelectedFilterListLiveData instanceof Success}"
                    tools:listitem="@layout/item_selected_filter" />

                <com.google.android.material.circularreveal.CircularRevealFrameLayout
                    android:id="@+id/fl_circular_reveal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:circularReveal="@{newFilterViewModel.categoryLiveData instanceof String}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_selected_filter">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filters"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/grid_6"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/grid_1"
                        android:paddingEnd="@dimen/grid_1"
                        android:paddingBottom="@dimen/grid_4"
                        app:paddingBottomSystemWindowInsets="@{true}"
                        app:visible="@{newFilterViewModel.filterListForSelectedCategoryLiveData instanceof Success}"
                        tools:listitem="@layout/item_filter_chip" />

                    <include
                        android:id="@+id/layout_error"
                        layout="@layout/layout_error_screen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:errorViewConfig="@{errorStateConfig}"
                        app:isVisible="@{newFilterViewModel.filterListForSelectedCategoryLiveData instanceof Failure}"
                        tools:visibility="gone" />

                    <include
                        android:id="@+id/layout_empty"
                        layout="@layout/layout_empty_screen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:emptyViewConfig="@{emptyStateConfig}"
                        app:isVisible="@{newFilterViewModel.filterListForSelectedCategoryLiveData instanceof Empty}"
                        tools:visibility="gone" />

                </com.google.android.material.circularreveal.CircularRevealFrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:elevation="@dimen/plane_08"
            app:fabAlignmentMode="center"
            app:fabAnimationMode="scale"
            app:fabCradleMargin="@dimen/bottom_app_bar_fab_cradle_margin"
            app:fabCradleRoundedCornerRadius="@dimen/bottom_app_bar_fab_cradle_corner_radius"
            app:fabCradleVerticalOffset="@dimen/grid_0_5"
            app:menu="@menu/filter_menu">

            <LinearLayout
                android:id="@+id/bottom_app_bar_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/grid_12"
                android:orientation="horizontal">

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/plane_08"
            android:onClick="@{() -> newFilterViewModel.closeFilter()}"
            app:ensureMinTouchTargetSize="true"
            app:fabSize="normal"
            app:layout_anchor="@id/bottom_filter_bar"
            app:srcCompat="@drawable/vc_close" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.droid47.petfriend.search.presentation.models.LoadingState" />

        <import type="com.droid47.petfriend.search.presentation.models.DefaultState" />

        <import type="com.droid47.petfriend.search.presentation.models.ErrorState" />

        <import type="com.droid47.petfriend.search.presentation.models.EmptyState" />

        <import type="com.droid47.petfriend.search.presentation.models.PaginatingState" />

        <variable
            name="searchViewModel"
            type="com.droid47.petfriend.search.presentation.viewmodel.SearchViewModel" />

        <variable
            name="petSpinnerViewModelAndLocation"
            type="com.droid47.petfriend.search.presentation.viewmodel.PetSpinnerAndLocationViewModel" />

        <variable
            name="loadingStateConfig"
            type="com.droid47.petfriend.base.bindingConfig.ContentLoadingConfiguration" />

        <variable
            name="errorStateConfig"
            type="com.droid47.petfriend.base.bindingConfig.ErrorViewConfiguration" />

        <variable
            name="emptyStateConfig"
            type="com.droid47.petfriend.base.bindingConfig.EmptyScreenConfiguration" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/scrimBackground"
            android:elevation="@dimen/plane_12">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/tool_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways"
                app:titleEnabled="false">

                <include
                    android:id="@+id/top_search_bar"
                    layout="@layout/layout_search_top_bar"
                    app:layout_collapseMode="parallax"
                    app:petSpinnerViewModelAndLocation="@{petSpinnerViewModelAndLocation}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="@dimen/grid_1"
                android:paddingEnd="@dimen/grid_1"
                android:paddingBottom="@dimen/grid_12"
                app:hasFixedSize="@{true}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:spanCount="@integer/featured_grid_columns"
                tools:listitem="@layout/item_pet" />

            <include
                android:id="@+id/layout_error"
                layout="@layout/layout_error_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/grid_12"
                app:errorViewConfig="@{errorStateConfig}"
                app:isVisible="@{searchViewModel.searchStateLiveData instanceof ErrorState}"
                tools:visibility="gone" />

            <include
                android:id="@+id/layout_empty"
                layout="@layout/layout_empty_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/grid_12"
                app:emptyViewConfig="@{emptyStateConfig}"
                app:isVisible="@{searchViewModel.searchStateLiveData instanceof EmptyState}"
                tools:visibility="gone" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer="@{searchViewModel.searchStateLiveData instanceof LoadingState}">

                <include layout="@layout/layout_search_loader" />

            </com.facebook.shimmer.ShimmerFrameLayout>

        </FrameLayout>

        <View
            android:id="@+id/scrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/scrimBackground"
            android:contentDescription="@string/fab_search_filter_content_description"
            android:visibility="invisible"
            app:layout_behavior="@string/fab_transformation_scrim_behavior" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/circular_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/loading_circular_dimen"
            android:layout_height="@dimen/loading_circular_dimen"
            android:layout_gravity="center"
            android:elevation="24dp"
            android:theme="@style/Widget.PetGoogle.ContentProgress"
            android:visibility="gone"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="center" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:elevation="@dimen/plane_08"
            app:fabAlignmentMode="center"
            app:fabAnimationMode="scale"
            app:fabCradleMargin="@dimen/bottom_app_bar_fab_cradle_margin"
            app:fabCradleRoundedCornerRadius="@dimen/bottom_app_bar_fab_cradle_corner_radius"
            app:fabCradleVerticalOffset="@dimen/grid_0_5"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:id="@+id/bottom_app_bar_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/grid_12"
                android:orientation="horizontal">

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_7"
            android:elevation="@dimen/plane_08"
            android:src="@drawable/vc_filter"
            app:ensureMinTouchTargetSize="true"
            app:fabSize="normal"
            app:layout_anchor="@id/bottom_app_bar" />

        <com.google.android.material.transformation.TransformationChildCard
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/zero"
            app:cardPreventCornerOverlap="true"
            app:layout_behavior="@string/fab_transformation_sheet_behavior"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.pet.LargeComponent.Top">

            <fragment
                android:id="@+id/fragment_filter"
                android:name="com.droid47.petfriend.search.presentation.FilterFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.transformation.TransformationChildCard>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.droid47.petfriend.search.presentation.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/to_pet_details"
            app:destination="@id/navigation_pet_details" />

    </fragment>

    <fragment
        android:id="@+id/navigation_pet_details"
        android:name="com.droid47.petfriend.petDetails.presentation.PetDetailsFragment"
        android:label="@string/nav_animal_details_label"
        tools:layout="@layout/fragment_pet_details">

        <argument
            android:name="petId"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.droid47.petfriend.home.presentation.SettingFragment"
        android:label="@string/settings" />

    <fragment
        android:id="@+id/navigation_about_us"
        android:name="com.droid47.petfriend.aboutUs.presentation.AboutUsFragment"
        android:label="@string/about_us"
        tools:layout="@layout/fragment_about_us" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.droid47.petfriend.bookmark.presentation.ui.BookmarkFragment"
        android:label="@string/favourite"
        tools:layout="@layout/fragment_book_mark">

        <action
            android:id="@+id/to_pet_details"
            app:destination="@id/navigation_pet_details" />

    </fragment>

</navigation>